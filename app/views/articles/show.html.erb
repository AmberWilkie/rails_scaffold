
<h1><%= @article.title %></h1>
<p><%= @article.content %></p>
<hr width="600px">
<div class='comment'>
<%= form_for [@article, @comment], method: :post do |f| %>
  <%= label :email, 'Email (Optional)' %><br>
  <%= f.text_field :email, value: @comment.email %><br>
  <%= f.text_area :body, size: "60x12", value: @comment.body %>
  <%= f.submit "Comment" %>
<% end %>
</div>
<div class='display_comments'>
  <% @article.comments.each do |comment| %>
    <% if comment.email != nil %>
      <%= comment.email%> says:<br>
      <% end %>
    <p><%= comment.body %></p>
  <% end %><p>
</div>
